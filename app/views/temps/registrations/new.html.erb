<h2>Sign up as guest</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <p>To try, just enter your name!</p>

  <div class="row">
    <%= f.label :name %>
    <%= f.text_field :name, :placeholder => "Your name" %>
  </div>

  <div><%= f.submit "Sign up", :class => 'button nice' %></div>
<% end %>

<%= render "links" %>
