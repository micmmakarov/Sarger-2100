<div class="row content-top-offset">

  <div class="twelve columns">

    <div class="row">

      <div class="sides-offset">

        <h2>Sign up</h2>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="row">
            <%= f.label :name %>
            <%= f.text_field :name, :placeholder => "Your name" %>
          </div>

          <div class="row">
            <%= f.label :email %>
            <%= f.email_field :email, :placeholder => :Email %>
          </div>

          <div class="row">
            <%= f.label :password %>
            <%= f.password_field :password, :placeholder => :Password %>
          </div>

          <div class="row">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, :placeholder => "Password again" %>
          </div>

          <div><%= f.submit "Sign up", :class => 'button nice' %></div>
        <% end %>

        <%= render "links" %>

      </div>
    </div>
  </div>
</div>
