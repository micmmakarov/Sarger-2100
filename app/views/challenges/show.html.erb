<div class="row content-top-offset">

  <div class="twelve columns">

    <div class="row">

      <p id="notice"><%= notice %></p>

      <div class="challenges">
        <% if admin_signed_in?  %>
        <%=  render :partial => "tree", :locals => {:challenge => @challenge} %>
        <% else %>
            <% if @challenge.more_levels? != [nil] %>
                <%=  render :partial => "show", :locals => {:challenge => @challenge} %>
            <% else %>
                <%=  render :partial => "checklist", :locals => {:challenge => @challenge} %>
            <% end %>
            
      <% end %>
      </div>

      <% if admin_signed_in?  %>

          <%= render "add_challenge" %>

          <!-- edit current challenge links -->
          <%= link_to 'Edit', edit_challenge_path(@challenge) %> |
          <%= link_to 'Back', challenges_path %>


      <% end %>

    </div>

  </div>

</div>
