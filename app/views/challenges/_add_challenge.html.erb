<%= form_for(Challenge.new(:challenge_id => @challenge.id),
             remote: true, class: 'follow') do |f| %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
